@model IEnumerable<Employee>

@{
	ViewData["Title"] = "Employee List";
}

<h1>Employee List</h1>

<table class="table">
	<thead>
		<tr>
			<th>Name</th>
			<th>Position</th>
			<th>Salary</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var item in Model)
		{
			<tr>
				<td>@item.Name</td>
				<td>@item.Position</td>
				<td>@item.Salary</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
				</td>
			</tr>
		}
	</tbody>
</table>