@model Employee

<h1>Create Employee</h1>

<div class="row">
	<div class="col-md-4">
		<form asp-action="Create">
			<div class="form-group">
				<label asp-for="Name" class="form-label"></label>
				<input asp-for="Name" class="form_control" />
			</div>
			<div class="form-group">
				<label asp-for="Position" class="form-label"></label>
				<input asp-for="Position" class="form_control" />
			</div>
			<div class="form-group">
				<label asp-for="Salary" class="form-label"></label>
				<input asp-for="Salary" class="form_control" />
			</div>
			<div class="form-group">
				<input type="submit" value="Create" class="btn btn-primary"/>
			</div>
		</form>
	</div>
</div>